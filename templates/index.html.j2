<html>
  <head>
    <title>aspera</title>
    <link rel="stylesheet" type="text/css" href="static/main.css" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
  </head>
  <body>
    <section class="accordion">
      <input type="checkbox" name="collapse1" id="handle1" checked />
      <h2 class="handle">
        <label for="handle1">Radio</label>
      </h2>
      <form method="POST" id="xmms2" class="content">
        <label class="switch">
          <input type="checkbox" name="xmms2request" value="on" {{ '' if xmms2playing else 'checked' }} />
          <span class="slider round"></span>
        </label>
        <label>
          <input type="text" name="xmms2url" value="http://icecast4.play.cz/crojazz256.mp3" />
        </label>
      </form>
    </section>
    <section class="accordion">
      <input type="checkbox" name="collapse2" id="handle2" />
      <h2 class="handle">
        <label for="handle2">Alarm</label>
      </h2>
      <form method="POST" id="alarm" class="content">
        <label>
          <input type="text" name="cron" value="50 07 * * 1-5" />
        </label>
        <input type="hidden" name="alarm" />
      </form>
    </section>
    <script>
      const xmms2form = document.querySelector('#xmms2');
      xmms2form.addEventListener("change", updateValue);
      function updateValue(e) {
        xmms2form.submit();
      }
    </script>
  </body>
</html>
